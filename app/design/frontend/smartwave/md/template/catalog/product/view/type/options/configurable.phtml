$_product    = $this->getProduct();
$_attributes = Mage::helper('core')->decorateArray($this->getAllowAttributes());
?>
<?php if ($_product->isSaleable() && count($_attributes)):?>
    <dl>
    <?php foreach($_attributes as $_attribute): ?>
        <dt><label class="required">Bitte <?php echo $_attribute->getLabel() ?> ausw&auml;hlen</label></dt>
        <dd<?php if ($_attribute->decoratedIsLast){?> class="last"<?php }?>>
            <div class="input-box">
                <select name="super_attribute[<?php echo $_attribute->getAttributeId() ?>]" id="attribute<?php echo $_attribute->getAttributeId() ?>" class="required-entry super-attribute-select">
                    <option><?php echo $this->__($_attribute->getLabel().' w&auml;hlen') ?></option>
                  </select>
              </div>
        </dd>
    <?php endforeach; ?>
    </dl>
    <script type="text/javascript">
        var spConfig = new Product.Config(<?php echo $this->getJsonConfig() ?>);
        spConfig.reloadPrice = spConfig.reloadPrice.wrap(function(parentMethod) {
          parentMethod();


          var childProductId = this.getMatchingSimpleProduct();
          var config = this.config;

          if(childProductId) {
            if (config.childProducts[childProductId].deliveryTime) {
              jQuery('.delivery-time').each(function( index ) {
                jQuery(this).html('Versand: ' + config.childProducts[childProductId].deliveryTime);
              });
              jQuery('.msrp-banner .percentage').each(function( index ) {
                var priceExclTax = parseFloat(optionsPrice.productPrice);
                var price = priceExclTax + (priceExclTax / 100 * optionsPrice.currentTax);
                var savings = Math.floor((1 - (price / config.childProducts[childProductId].msrp)) * 100);
                jQuery(this).html('- '+savings+' %');
              });
            }
          }
          return;
        });
    </script>
<?php endif;?>
